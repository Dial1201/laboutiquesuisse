{% extends 'base.html.twig' %}

{% block title %}La Boutique Suisse
{% endblock %}

{% block content %}
	<h1>Inscription</h1>

	{# {{form(form)}} #}
	{{ form_start(form) }}

	{{ form_errors(form) }}

	<div class="row">
		<div class="col">
			{{ form_row(form.firstname)  }}
		</div>
		<div class="col">
			{{ form_row(form.lastname)  }}
		</div>
	</div>

	<div class="row">
		<div class="col">
			{{ form_row(form.email)  }}
		</div>
	</div>

	<div class="row">
		<div class="col">
			{{ form_row(form.password)  }}
		</div>
		<div class="col">
			{{ form_row(form.password_confirm)  }}
		</div>
	</div>

	<div class="btn btn-primary">
		<i class="fas fa-save">Login</i>
	</div>

	{{ form_end(form) }}

{% endblock %}
