{% extends 'base.html.twig' %}


{% block content %}
	<h2>Nos Produits</h2>

	<div class="row product-container">
		{% for product in products %}
			<div class="col-md-4">
				<div class="product-item text-center">
					<a href="{{ path('product', {'slug' : product.slug} ) }}"><img src="uploads/products/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid"></a>
					<h5>{{ product.name }}</h5>
					<span class="product-subtitle">{{ product.subtitle }}</span>
					<span class="product-price">{{ (product.price / 100)|number_format(2,',','.') }}
						â‚¬</span>
				</div>
			</div>
		{% endfor %}

	</div>
{% endblock %}
